<% layout('./layouts/boilerplate') %>
<div class="row">
    <div class="col-md-6 offset-md-3">
        <h1 class="text-center">Edit Post</h1>
        <form action="/posts" method="POST" novalidate class="validated-form">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" value="<%=post.title%>" required name="post[title]" id="title" placeholder="Enter Title">
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label for="post">Post</label>
                <textarea class="form-control" required name="post[post]" id="post" cols="30" rows="10"><%=post.post%></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <!-- <div class="mb-3">
                <label for=""></label>
            </div> -->
            <div class="mb-3">
                <button class="btn btn-success">Update Post</button>
                <a href="/posts/<%=post._id%>" class="btn btn-primary">Cancel</a>
            </div>
        </form>
    </div>
</div>